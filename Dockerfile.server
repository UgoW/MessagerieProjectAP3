FROM fedora:38

RUN dnf update -y && \
    dnf install -y gcc make openssl openssl-devel && \
    dnf install -y nano && \
    dnf clean all && \
    rm -rf /var/cache/dnf

WORKDIR /app

COPY . .

RUN gcc src/server.c src/aesEncryption.c src/rsaEncryption.c -o server -lssl -lcrypto && \
    gcc src/client.c src/aesEncryption.c src/rsaEncryption.c -o client -lssl -lcrypto


CMD ["/bin/bash"]